@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Inscription";
}

<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Associer votre @Model.ProviderDisplayName compte.</h2>
<hr />

<p id="external-login-description" class="text-info">
    Vous avez réussi à vous authentifier avec <strong>@Model.ProviderDisplayName</strong>.
    Veuillez entrer une adresse mail pour ce site ci-dessous et cliquer sur le bouton Inscription pour terminer l'authentification.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">S'enregistrer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
